---
import { Image } from "astro:assets";
import navigation from "@/assets/navigator.svg";
import events from "@/assets/events.svg";
import faculties from "@/assets/faculties.svg";
interface Props {
  imageNo: number;
  title: string;
  title_sub?: string;
  link: string;
  text: string;
}
const {
  title = "",
  link = "",
  title_sub = "",
  text = "",
  imageNo = -1,
} = Astro.props;
const image = [navigation, events, faculties];
---

<a
  href={link}
  class="m-2 flex h-[18.5rem] w-[19rem] max-w-full flex-col items-center justify-evenly rounded-2xl border-2 bg-transparent bg-gradient-to-t from-pink-400/50 to-white/5 shadow-inner shadow-white backdrop-blur-2xl duration-500 hover:h-96"
>
  <Image src={image[imageNo]} alt="Image" />
  <div class="flex flex-col items-center font-libre text-4xl">
    <p>{title}</p>
    <p>{title_sub}</p>
  </div>
  <div class="rounded-2xl bg-white">
    <p class="px-3 py-1 text-sm text-pink-550">{text}</p>
  </div>
</a>
